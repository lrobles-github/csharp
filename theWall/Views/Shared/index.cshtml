@{
    ViewData["Title"] = "Home Page";
}



<div>
<form asp-controller="User" asp-action="login" method="POST">

    <h3 class="display1">Welcome! Please log in below.</h3>
    <br>
    <br>
    <br>
    <br>
    <br>

    <div class="form-group row">
        <label for="email" class="col-2 col-form-label">Email</label>
        <div class="col-10">
            <input class="form-control" type="email" name="email">
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-2 col-form-label">Password</label>
        <div class="col-10">
            <input class="form-control" type="password" name="password">
        </div>
    </div>
        <button type="submit" value="Login" class="btn btn-primary">Submit</button>
    <div class="form-group">
        <small class="form-text text-muted">If you don't have an account yet, create one <a href="/register">here</a>.</small>
    </div>
    <div>
        <p>@ViewBag.EmailError</p>
    </div>
</form>

</div>