@model theWall.Models.User


<form asp-controller="User" asp-action="register" method="POST">

    <div class="form-group row">
        <label asp-for="firstname" class="col-2 col-form-label">First Name</label>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="firstname">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="lastname" class="col-2 col-form-label">Last Name</label>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="lastname">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="email" class="col-2 col-form-label">Email</label>
        <div class="col-10">
            <input class="form-control" type="email" asp-for="email">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="password" class="col-2 col-form-label">Password</label>
        <div class="col-10">
            <input class="form-control" type="password" asp-for="password">
        </div>
    </div>

    <div class="form-group row">
        <label for="passwordconfirm" class="col-2 col-form-label">Confirm Password</label>
        <div class="col-10">
            <input class="form-control" type="password" name="passwordconfirm">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>

    <div asp-validation-summary="All"></div>

</form>